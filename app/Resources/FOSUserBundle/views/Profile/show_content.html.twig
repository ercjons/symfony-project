<div class="fos_user_user_show">
    <div class="col-md-8 well">
        <p>{{ 'profile.show.username'|trans({}, 'FOSUserBundle') }}: {{ user.username }}</p>
        <p>{{ 'profile.show.email'|trans({}, 'FOSUserBundle') }}: {{ user.email }}</p>

        <div class="form-group">
            <a href="{{ path('fos_user_profile_edit') }}" class="btn btn-primary">Modifier profil </a>
        </div>
    </div>

    {% if is_granted('ROLE_SUPER_ADMIN') %}
        <div class="col-md-3 col-md-offset-1" id="sidebar_responsive">
            {% include ('@Ecommerce/Partials/sidebar/sidebar_admin.html.twig')%}
        </div>
    {% elseif is_granted('ROLE_USER') %}
        <div class="col-md-3 col-md-offset-1" id="sidebar_responsive">
            {% include ('@Ecommerce/Partials/sidebar/sidebar_user.html.twig')%}
        </div>
    {% endif %}

</div>

