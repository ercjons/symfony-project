                            {{ form_errors(form.postcode) }}
                            <div class="col-md-12">
                                {{ form_widget(form.postcode, {'attr':{'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="form-group">
                            {{ form_label(form.city, "Votre ville",{'label_attr':{'class':'col-sm3 control-label'}}) }}
                            <br>
                            {{ form_errors(form.city) }}
                            <div class="col-md-12">
                                {{ form_widget(form.city, {'attr':{'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="form-group">
                            {{ form_label(form.country, "Votre Pays",{'label_attr':{'class':'col-sm3 control-label'}}) }}
                            <br>
                            {{ form_errors(form.country) }}
                            <div class="col-md-12">
                                {{ form_widget(form.country, {'attr':{'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <br>
                        <hr>
                        {{ form_rest(form) }}
                        <input type="submit" class="btn btn-primary pull-right">
                    </form>
                </div>
            </div>

            <div class="col-md-3 col-md-offset-1" id="sidebar_responsive">
                {% include ('EcommerceBundle:Partials/sidebar:sidebar_user.html.twig')%}
            </div>
