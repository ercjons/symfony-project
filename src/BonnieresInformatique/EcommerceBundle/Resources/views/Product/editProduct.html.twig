                            {#<button class="btn btn-primary" onclick="getValue()">Value</button>#}
                            {#<script>#}
                                {#//If you want to change it dynamically#}
                                {#function toggleOn() {#}
                                    {#$('#toggle-trigger').bootstrapToggle('on');#}
                                {#}#}
                                {#function toggleOff() {#}
                                    {#$('#toggle-trigger').bootstrapToggle('off');#}
                                    {#{{ product.available == false }}#}
                                {#}#}
