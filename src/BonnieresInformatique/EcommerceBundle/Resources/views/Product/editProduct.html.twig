                                {#function getValue()#}
                                {#{#}
                                    {#var value=$('#toggle-trigger').bootstrapToggle().prop('checked');#}
                                    {#console.log(value);#}
                                {#}#}
                            {#</script>#}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div><!-- End/.row3 -

{% endblock contenair %}








