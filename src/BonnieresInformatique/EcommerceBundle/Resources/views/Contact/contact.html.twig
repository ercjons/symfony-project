{% extends '@Ecommerce/content.html.twig' %}

{% block contenair %}

    {% include '@Ecommerce/Partials/flash/flash.html.twig' %}
    <div class="row text-center">
        <div class="col-md-1 pull-left">
            <button type="button" class="btn btn-default btn-sm">
                <span class="glyphicon glyphicon-hand-right"></span> Formulaire de contact
            </button>
        </div>
    </div><!-- End/.row -->
    <hr>
    <div class="row">
        <div class="col-md-6" id="contact">
            <div class="well">
                <form action="{{ path('ecommerce_contact') }}" method="POST" {{ form_enctype(form) }}>
                    {{ form_row(form.name) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.subject) }}
                    {{ form_row(form.body) }}

                    {{ form_rest(form) }}
                    <hr>
                    <input type="submit" class="btn btn-primary pull-right">
                </form>
            </div>
        </div>

        <div class="col-md-6 text-center">
            <address>
                <strong>Bonnieres Informatique / Ventes et réparations </strong><br><br>
                <p><strong>Adresse et numéro : </strong> <br>
                    12 Rue Georges Herrewyn <br>
                    78270 Bonnières-sur-Seinebr <br>
                    Télephone :  09 80 57 91 29
                </p>
            </address>
        </div>
    </div>
    <br>

    <div class="row">
        <div class="col-md-12">
            <iframe width="100%" height="350" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"
                    src="https://www.google.com/maps/d/embed?mid=1Fz5Au5FLzp2apQ5sjWB41poHPTQ">
            </iframe>
        </div>
    </div>

{% endblock contenair %}