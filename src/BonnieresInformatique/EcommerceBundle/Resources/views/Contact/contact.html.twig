{% extends '@Ecommerce/content.html.twig' %}

{% block contenair %}

    {% include '@Ecommerce/Partials/flash/flash.html.twig' %}
    <div class="row">
        <div class="col-md-12">
            <h2>Nous contacter</h2>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-md-6" id="contact">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-lg-6 form-group">
                    <div class="subject">
                        {{ form_widget(form.subject, {'attr':{'class':'form-control','placeholder':'Objet *'}}) }}
                    </div>
                    <div class="text-center">
                        {{ form_errors(form.subject) }}
                    </div>
                </div>

                <div class="col-lg-6 form-group">
                    <div class="name">
                        {{ form_widget(form.name, {'attr':{'class':'form-control','placeholder':'Votre nom *'}}) }}
                    </div>
                    <div class="text-center">
                        {{ form_errors(form.name) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 form-group">
                    <div class="email">
                        {{ form_widget(form.email, {'attr':{'class':'form-control','placeholder':'Votre adresse email *'}}) }}
                    </div>
                    <div class="text-center">
                        {{ form_errors(form.email) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 form-group">
                    <div class="message">
                        {{ form_widget(form.body, {'attr':{'class':'form-control','placeholder':'Votre message *'}}) }}
                    </div>
                    <div class="text-center">
                        {{ form_errors(form.body) }}
                    </div>
                </div>
            </div>
            {{ form_rest(form) }}
            <div class="">
                <input type="submit" value="Envoyer" class="btn btn-primary contact_submit">
            </div>
            {{ form_end(form) }}
        </div>
        <div class="col-md-6 text-center">
            <address>
                <strong>Bonnieres Informatique / Ventes et réparations </strong><br><br>
                <p><strong>Adresse et numéro : </strong> <br>
                    12 Rue Georges Herrewyn <br>
                    78270 Bonnières-sur-Seinebr <br>
                    Télephone :  09 80 57 91 29
                </p>
            </address>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-md-12">
            <iframe width="100%" height="350" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"
                    src="https://www.google.com/maps/d/embed?mid=1Fz5Au5FLzp2apQ5sjWB41poHPTQ">
            </iframe>
        </div>
    </div>

{% endblock contenair %}